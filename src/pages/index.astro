---
import BaseLayout from '../layouts/BaseLayout.astro'

const pageData = {
    title: "Hi, I'm Qiao.",
    role: "Developer",
    image: "/qiao-blog/placeholder.png",
    content: "An Engineer who loves to learn new stuffs about Math, Machine Learning, and cutting edge AI stuffs."
};
---

<BaseLayout title="Qiao's Personal Website">
    <section class="flex flex-col md:flex-row items-start gap-6 px-4 md:px-6 max-w-4xl mx-auto">
        <div class="w-32 h-32 md:w-48 md:h-48 flex-shrink-0 mx-auto md:mx-0">
            <img
                src={pageData.image}
                alt="Qiao's profile picture"
                class="w-full h-full object-cover rounded-full shadow-lg"
            />
        </div>
        <div class="text-center md:text-left">
            <h1 class="text-3xl font-bold mb-2 text-gray-900 dark:text-white">{pageData.title}</h1>
            <h2 class="text-xl text-gray-700 dark:text-gray-200 mb-4">{pageData.role}</h2>
            <p class="text-base text-gray-700 dark:text-gray-200 leading-relaxed max-w-2xl">
                {pageData.content}
            </p>
        </div>
    </section>
</BaseLayout>
